<h1>User Profile</h1>
<h3>Logged in as: <%= @user.email %></h3>
<div>

    <% if @user.items.any? %>
      <h3>Things to do (<%= @user.items.count %>)</h3>

        <ol>
          <% @user.items.each do |item| %>
            <li id="item-<%= item.id %>"><%= item.name %>
              : you have <%= item.since %> to do it
              <%= link_to "", user_item_path(@user.id, item.id), :remote => true, method: :delete, class: 'glyphicon  glyphicon-ok' %></li>
          <% end %>
        </ol>

      <% else %>
        <p><%= @user.email %> has no items</p>
    <% end %>
  <%= render :partial => "items/form" %>

</div>
